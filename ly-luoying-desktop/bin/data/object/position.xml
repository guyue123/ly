<?xml version="1.0" encoding="UTF-8"?>

<root xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name ../../../../ly-kernel/src/LuoYing/Data/meta/position.xsd'>

    <!--=====================================================================-->
    <!--通用配置-->
    <!--=====================================================================-->

    <positionFixedPoint id="positionOrigin" point="0, 0, 0" />
    
    <positionRandomSphere id="positionCommonSp0_5" center="0,0,0" radius="0.5" />
    <positionRandomSphere id="positionCommonSp0_7" center="0,0,0" radius="0.7" />
    <positionRandomSphere id="positionCommonSp1_0" center="0,0,0" radius="1" />

    <!--默认的射击点1-->
    <positionFixedPoint id="positionDefShotUp" point="0,2,7" />
    <positionFixedPoint id="positionDefShotLeft" point="2,1,7" />
    <positionFixedPoint id="positionDefShotRight" point="-2,1,7" />
    
    <!--=====================================================================-->
    <!--特定配置-->
    <!--=====================================================================-->

    <positionRandomSphere id="positionFlameShape" center="0, 0, 0" radius="1" />
    
    <positionRandomSphere id="positionFlashShape" center="0, 0, 0" radius="0.05" />

    <positionRandomSphere id="positionRandomFire" center="0,0,0" radius="1" />
    
    <!--在一个圆柱的范围内-->
    <positionRandomCircle id="positionCylinder" plane="xz" minRadius="0.5" maxRadius="0.5" minOffset="0,0.8,0" maxOffset="0,0.8,0" />
    
    <positionFixedPoint id="positionSwordSpark" point="0,0,0" />
    
    <!-- 用于召换野兽 -->
    <positionRandomSphere id="positionHalo" center="0, 1, 0" radius="2.5" />
    
    <!-- 用于星光传送中的星光发射 -->
    <positionRandomSphere id="positionHaloExp" center="0, 0.5, 0" radius="1" />
    
    <!-- 用于黑暗祭坛 -->
    <positionRandomCircle id="positionAltar" plane="xz" minRadius="0" maxRadius="2"/>
    <positionRandomSphere id="positionAltarHalo" center="0,0,0" radius="2.5" />
    
    <!-- 闪电箭shape -->
    <positionRandomSphere id="positionLightningShotBolt" center="0, 0, 0" radius="1" />
    <positionRandomSphere id="positionLightningShotHit" center="0, 0, 0" radius="1.5" />
    <positionRandomCircle id="positionLightningShotBullet2" plane="xy" minRadius="0.5" maxRadius="0.5" order="1" orderSize="7" orderInvert="0" />

    <!-- 状态：疾风步,音障和退散粒子 -->
    <positionRandomSphere id="positionStateWindWalkStart" center="0,1,0" radius="2.5" />
    <positionFixedPoint  id="positionStateWindWalk" point="0, 0.75, 0" />
    
    <!--状态：晕眩，金星旋转-->
    <positionRandomCircle id="positionShapeStun" plane="xz" minRadius="0.3" maxRadius="0.3" maxOffset="0,0.1,0" />
    
    <!--落樱飞舞-->
    <positionRandomCircle id="positionDanceSakuraHalo" plane="xy" minRadius="0" maxRadius="2.5" />
    <positionRandomCircle id="positionDanceSakuraJump" plane="xz" minRadius="0.5" maxRadius="0.5" />
    <positionRandomCircle id="positionDanceSakuraWaypoint" des="for skill waypoints" plane="xy" minRadius="2" maxRadius="4" />
    <positionRandomCircle id="positionDanceSakuraWaypoint2" des="for skill waypoints" plane="xy" minRadius="2" maxRadius="4" minOffset="0,0,-3" maxOffset="0,0,-3" />
    
    <!--石塔黑烟-->
    <positionRandomCircle id="positionTowerSmoke" plane="xy" minRadius="0" maxRadius="0" minOffset="0,0,-0.5" maxOffset="0,0,-0.5" />
    
    <!--=====================================================================-->
    <!--电光火石-->
    <!--=====================================================================-->
    <!--手上闪电-->
    <positionRandomSphere id="positionShapeLightning" center="0, 0, 0" radius="0.2" />
    <!--子弹-->
    <positionFixedPoint id="positionFlowLight" point="0,1,5" />

    <!--=====================================================================-->
    <!--BUFF-->
    <!--=====================================================================-->
    <positionFixedPoint id="positionShapeBuff" point="0,2.5,8" />
    
    <!--=====================================================================-->
    <!--复活术-->
    <!--=====================================================================-->    
    <positionRandomCircle id="positionShapeReborn" plane="xz" minRadius="0" maxRadius="2" minOffset="0,0,0" maxOffset="0,2,0" />
    
    <!--=====================================================================-->
    <!--冲击波-->
    <!--=====================================================================-->    
    <positionFixedPoint id="positionShapeWave" point="-2,3,10" />
    
    <!--=====================================================================-->
    <!--黄金宝箱计时面板位置路径点:右上角-->
    <!--=====================================================================-->    
    <positionView id="positionTreasureP1" corner="LB" />
    <positionView id="positionTreasureP2" corner="CB" marginWeight="0,0,0,0.2" />
    <positionView id="positionTreasureP3" corner="RT" marginWeight="0,0,0.3,0" />
    <positionView id="positionTreasureP4" corner="RT" marginWeight="0,0.27,0.15,0" />
    
    <!--=====================================================================-->
    <!--二刀流冲击波-->
    <!--=====================================================================-->    
    <positionRandomCircle id="positionWaveShape" plane="xz" minRadius="2" maxRadius="2" minOffset="0,0,0" maxOffset="0,0.5,0" />
    
    <!--=====================================================================-->
    <!--test-->
    <!--=====================================================================-->    
    <positionRandomCircle id="positionShapePZS" plane="xz" minRadius="0" maxRadius="0.3" minOffset="0,0,0" maxOffset="0,0,0" />
    <positionRandomCircle id="positionShapePZC" plane="xz" minRadius="0" maxRadius="2" minOffset="0,4,0" maxOffset="0,6,0"/>
    <positionRandomCircle id="positionShapePZE" plane="xz" minRadius="0" maxRadius="2" minOffset="0,8,0" maxOffset="0,10,0"/>

    
</root>



