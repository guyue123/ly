<?xml version="1.0" encoding="UTF-8"?>

<root 
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://luoying.huliqing.name'
    xsi:schemaLocation='http://luoying.huliqing.name ../../../../ly-kernel/src/LuoYing/Data/meta/actorAnim.xsd' >
    
    <actorAnimCurveMove id="actorAnimBase" bindTargetAttribute="attributeTarget" />
    
    <!-- 落樱飞舞:角色动画 -->
    <actorAnimCurveMove id="actorAnimDanceSakura" extends="actorAnimBase" points="0|4|-3, 0|0|-6" useSine="1" />
    
    <!--左闪避和右闪避-->
    <actorAnimCurveMove id="actorAnimDuckLeft" extends="actorAnimBase" points="5|0|2" facing="target" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckRight" extends="actorAnimBase" points="-5|0|2" facing="target" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckBack" extends="actorAnimBase" points="0|2|-2.5,0|0|-5" facing="none" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckRollLeft" extends="actorAnimBase" points="3|0|3" facing="target" useSine="1" />
    <actorAnimCurveMove id="actorAnimDuckRollRight" extends="actorAnimBase" points="-3|0|3" facing="target" useSine="1" />
    
    <!--复活术：让死亡角色轻飘飘向上浮动-->
    <actorAnimCurveMove id="actorAnimMoveUp" extends="actorAnimBase" speed="0.25" loop="dontLoop" points="0|2.5|0" tension="0" />
</root>



